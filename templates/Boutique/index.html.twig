{% extends 'base.html.twig' %}
{% block body %}

    <main role="main" class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="main-div">
                    <div class="card col-md-12">
                        <div class="card-header">
                            <h1><i class="fab fa-product-hunt"></i> {{ 'Boutique : 3 Rayon(s)' | trans }}</h1>
                        </div>

                        <div class="card-body row">
                        {% for category in categories %}
                            <div class="col-md-4">
                                <div class="card">
                                    <img src="{{ asset(category.visuel) }}" class="card-img-top"> {# {{ asset("images/carottes.jpg") }} #}
                                    <h4 class="card-title">{{ category.libelle }}</h4>
                                    <p class="card-text">{{ category.texte }}</p>
                                </div>
                                <h3>
                                    <a href="{{ path('produits', {idCategory: category.id})}}">
                                        <span class="badge badge-primary">
                                                {{ 'Produit en lien' | trans }}
                                        </span>
                                    </a>
                                </h3>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
