{% extends 'base.html.twig' %}

{% block title %}{{ 'Nouveau membre' | trans }}{% endblock %}

{% block body %}
<main role="main" class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <div class="main-div">

                <div class="row small">
                    <div class="card col-md-4 offset-1">

                        <div class="card-header">
                            <h1> {{ 'Nouveau Membre : Inscription' | trans }}</h1>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                {{ include('usager/_form.html.twig') }}
                            </div>
                            <div class="form-group">
                            {% if  usagerExist %}
                                <a href="{{ path('app_login') }}"> {{ 'Vous etes déjà inscrit, connectez-vous' | trans }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
           </div>
        </div>
    </div>
</main>
{% endblock %}